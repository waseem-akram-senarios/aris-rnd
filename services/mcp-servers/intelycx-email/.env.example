# Email Driver Configuration
# Choose your email driver: 'ses', 'smtp', or 'log'
EMAIL_DRIVER=log

# === SES Driver Configuration ===
# Required for SES driver
EMAIL_REGION=us-east-1
EMAIL_SENDER=noreply@intelycx.com
EMAIL_SENDER_NAME=Intelycx ARIS

# AWS credentials (optional if using IAM roles)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_SESSION_TOKEN=your_session_token

# === SMTP Driver Configuration ===
# Required for SMTP driver
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_password
SMTP_USE_TLS=true
SMTP_USE_SSL=false
SMTP_TIMEOUT=30

# === Log Driver Configuration ===
# Optional for log driver
EMAIL_LOG_LEVEL=INFO
EMAIL_LOG_FILE=/tmp/emails.log
EMAIL_LOG_INCLUDE_BODY=true
EMAIL_LOG_INCLUDE_ATTACHMENTS=true
EMAIL_LOG_PRETTY_PRINT=true

# === MCP Server Configuration ===
MCP_API_KEY=your_mcp_api_key
