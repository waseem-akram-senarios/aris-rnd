{
  "info": {
    "name": "ARIS RAG - Complete API Collection",
    "description": "Complete collection for testing all ARIS RAG endpoints including OCR verification, accuracy checking, images by number, and queries",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "aris-rag-complete"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://44.221.84.58:8500/health",
          "protocol": "http",
          "host": ["44.221.84.58"],
          "port": "8500",
          "path": ["health"]
        },
        "description": "Check if API is running"
      }
    },
    {
      "name": "Get All Documents",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://44.221.84.58:8500/documents",
          "protocol": "http",
          "host": ["44.221.84.58"],
          "port": "8500",
          "path": ["documents"]
        },
        "description": "Get list of all documents. Copy document_id from response."
      }
    },
    {
      "name": "Quick Accuracy Check",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://44.221.84.58:8500/documents/{{document_id}}/accuracy",
          "protocol": "http",
          "host": ["44.221.84.58"],
          "port": "8500",
          "path": ["documents", "{{document_id}}", "accuracy"]
        },
        "description": "Get quick accuracy check for a document. Returns accuracy status without full verification."
      }
    },
    {
      "name": "Full Verification",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": [],
              "description": "PDF file to verify"
            },
            {
              "key": "auto_fix",
              "value": "false",
              "type": "text",
              "description": "Set to 'true' to enable auto-fix for low accuracy"
            }
          ]
        },
        "url": {
          "raw": "http://44.221.84.58:8500/documents/{{document_id}}/verify",
          "protocol": "http",
          "host": ["44.221.84.58"],
          "port": "8500",
          "path": ["documents", "{{document_id}}", "verify"]
        },
        "description": "Full OCR verification with side-by-side comparison. Compares PDF content with stored OCR."
      }
    },
    {
      "name": "Verification with Auto-Fix",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": []
            },
            {
              "key": "auto_fix",
              "value": "true",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "http://44.221.84.58:8500/documents/{{document_id}}/verify",
          "protocol": "http",
          "host": ["44.221.84.58"],
          "port": "8500",
          "path": ["documents", "{{document_id}}", "verify"]
        },
        "description": "Verification with auto-fix enabled. Automatically fixes low accuracy issues."
      }
    },
    {
      "name": "Get All Images (Detailed)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://44.221.84.58:8500/documents/{{document_id}}/images/all",
          "protocol": "http",
          "host": ["44.221.84.58"],
          "port": "8500",
          "path": ["documents", "{{document_id}}", "images", "all"]
        },
        "description": "Get all images with detailed OCR and metadata from a document"
      }
    },
    {
      "name": "Get Images Summary (By Number)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://44.221.84.58:8500/documents/{{document_id}}/images",
          "protocol": "http",
          "host": ["44.221.84.58"],
          "port": "8500",
          "path": ["documents", "{{document_id}}", "images"]
        },
        "description": "Get summary of all images with total count and OCR text by image number"
      }
    },
    {
      "name": "Get Image by Number",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://44.221.84.58:8500/documents/{{document_id}}/images/{{image_number}}",
          "protocol": "http",
          "host": ["44.221.84.58"],
          "port": "8500",
          "path": ["documents", "{{document_id}}", "images", "{{image_number}}"]
        },
        "description": "Get OCR text for a specific image by its number (0, 1, 2, etc.)"
      }
    },
    {
      "name": "Get Page Information",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://44.221.84.58:8500/documents/{{document_id}}/pages/{{page_number}}",
          "protocol": "http",
          "host": ["44.221.84.58"],
          "port": "8500",
          "path": ["documents", "{{document_id}}", "pages", "{{page_number}}"]
        },
        "description": "Get all text chunks and images from a specific page"
      }
    },
    {
      "name": "Query Text Only",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"question\": \"What is in this document?\",\n  \"k\": 5,\n  \"document_id\": \"{{document_id}}\",\n  \"use_mmr\": true\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://44.221.84.58:8500/query/text",
          "protocol": "http",
          "host": ["44.221.84.58"],
          "port": "8500",
          "path": ["query", "text"]
        },
        "description": "Query only text content from documents"
      }
    },
    {
      "name": "Query Images Only",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"question\": \"tools and equipment\",\n  \"k\": 5,\n  \"source\": \"{{document_name}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://44.221.84.58:8500/query/images",
          "protocol": "http",
          "host": ["44.221.84.58"],
          "port": "8500",
          "path": ["query", "images"]
        },
        "description": "Query only image OCR content"
      }
    }
  ],
  "variable": [
    {
      "key": "document_id",
      "value": "",
      "type": "string",
      "description": "Document ID - get from 'Get All Documents' request"
    },
    {
      "key": "page_number",
      "value": "1",
      "type": "string",
      "description": "Page number to query"
    },
    {
      "key": "document_name",
      "value": "",
      "type": "string",
      "description": "Document name for filtering"
    },
    {
      "key": "image_number",
      "value": "0",
      "type": "string",
      "description": "Image number (0-indexed: 0, 1, 2, etc.)"
    }
  ]
}
